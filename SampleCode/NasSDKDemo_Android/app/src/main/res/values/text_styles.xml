<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="yx_nas_textstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="yx_nas_tab_textstyle" parent="yx_nas_textstyle">
        <item name="android:gravity">center</item>
        <item name="android:color">@color/yx_nas_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="yx_nas_content_textstyle" parent="yx_nas_textstyle">
        <item name="android:gravity">center</item>
        <item name="android:color">@color/yx_nas_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="yx_nas_textstyle.button">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>